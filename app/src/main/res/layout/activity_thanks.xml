<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThanksActivity"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/thanks_text_view"
        app:srcCompat="@drawable/start_page"
        android:gravity="center"
        android:paddingVertical="30dp"/>

    <TextView
        android:id="@+id/thanks_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Thank you for sharing the data to our database."
        android:textSize="22dp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:gravity="center"
        android:layout_above="@id/continue_classify_button"
        android:paddingVertical="30dp"/>

    <Button
        android:id="@+id/continue_classify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE CLASSIFYING"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>